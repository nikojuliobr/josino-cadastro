<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </head>
  <body>


    <div class="container">
      <nav class="navbar navbar-light">

          <a class="col-2 navbar-brand" href="#">
            <img src="/images/nodejs.png" width="50%" alt="">
          </a>
          <h1 class="col-5">Listagem de Alunos</h1>

          <form method="GET" action="/alunos/search" class="col-4 row">
            <div class="col-auto">
              <input type="search" name="nome" class="form-control" placeholder="Buscar">
            </div>
            <button type="submit" class="col-auto btn btn-primary"><i class="bi bi-search"></i></button>
          </form>

          <a href="/alunos/form" class="col-1 btn btn-primary"> Novo <i class="bi bi-plus-lg"></i> </a>
      </nav>
      <div class="row">

        <% if (locals.messages.success) { %>
          <div class="alert alert-success" role="alert">
            <%= locals.messages.success %>
          </div>
        <% } %>
        
        <% if (locals.messages.error) { %>
          <div class="alert alert-danger" role="alert">
            <%= locals.messages.error %>
          </div>
        <% } %>

        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nome</th>
              <th scope="col">Email</th>
              <th scope="col">Curso</th>
              <th scope="col">Opções</th>
              
            </tr>
          </thead>
          <tbody>

            <% for( aluno of alunos ) { %>
              <tr>
                <th scope="row"> <%= aluno.id %> </th>
                <td> <%= aluno.nome %> </td>
                <td> <%= aluno.email %> </td>
                <td> <%= aluno.curso  %> </td>
                <td>
                  <div class="row"> 
                    
                  <form class="col-auto" action="/alunos/delete" method="post">
                    <input type="hidden" name="id" value="<%= aluno.id %>">
                    <button class="btn btn-danger" type="submit"><i class="bi bi-trash3"></i></button>
                  </form>

                  <a class="col-auto btn btn-info" href="/alunos/form?id=<%= aluno.id %>"><i class="bi bi-pencil-square"></i></a>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

    </div>



  </body>
</html>
